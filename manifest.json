{
    "manifest_version": 2,
    "name": "openUR",
    "description": "Add and launch favorite websites in one click!",
    "version": "1.0.1",
    "icons": {
        "16": "img/16x16.png",
        "32": "img/32x32.png",
        "48": "img/48x48.png",
        "128": "img/128x128.png"
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "img/16x16.png",
            "32": "img/32x32.png",
            "48": "img/48x48.png",
            "128": "img/128x128.png"
        }
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    }
}